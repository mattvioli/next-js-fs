{
  "extends": ["next/core-web-vitals", "prettier", "eslint:recommended"],
  "plugins": ["unused-imports"],
  "globals": {
    "JSX": "readonly",
    "React": "readonly"
  },
  "rules": {
    "no-unused-vars": "error",
    "unused-imports/no-unused-imports": "error"
  },
  "overrides": [
    { "files": ["**/*.test.ts", "**/*.test.tsx"], "env": { "jest": true } }
  ]
}
